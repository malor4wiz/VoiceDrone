<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/yourOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="136dp"
        android:text=" Your order:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/voiceResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="None"
        app:layout_constraintStart_toEndOf="@+id/yourOrder"
        app:layout_constraintTop_toTopOf="@+id/yourOrder" />

    <TextView
        android:id="@+id/yourOrderSentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="has been carrying out"
        app:layout_constraintStart_toEndOf="@+id/voiceResult"
        app:layout_constraintTop_toTopOf="@+id/voiceResult" />

    <TextView
        android:id="@+id/recognitionRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="44dp"
        android:text="Recognition Rate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourOrderSentence" />

    <TextView
        android:id="@+id/rightRecognitionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Right:"
        app:layout_constraintStart_toStartOf="@+id/recognitionRate"
        app:layout_constraintTop_toBottomOf="@+id/recognitionRate" />

    <TextView
        android:id="@+id/leftRecognitionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Left:"
        app:layout_constraintStart_toStartOf="@+id/rightRecognitionTitle"
        app:layout_constraintTop_toBottomOf="@+id/rightRecognitionTitle" />

    <TextView
        android:id="@+id/rightRecognition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="%"
        app:layout_constraintStart_toEndOf="@+id/rightRecognitionTitle"
        app:layout_constraintTop_toTopOf="@+id/rightRecognitionTitle" />

    <TextView
        android:id="@+id/leftRecognition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="%"
        app:layout_constraintStart_toEndOf="@+id/leftRecognitionTitle"
        app:layout_constraintTop_toTopOf="@+id/leftRecognitionTitle" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:onClick="onClickHomeButton"
        android:text="Home"
        app:layout_constraintStart_toStartOf="@+id/touchButton"
        app:layout_constraintTop_toBottomOf="@+id/touchButton" />

    <Button
        android:id="@+id/voiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="36dp"
        android:text="Voice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leftRecognition"
        android:onClick="onClickVoiceButton"/>

    <Button
        android:id="@+id/touchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Touch"
        app:layout_constraintStart_toStartOf="@+id/voiceButton"
        app:layout_constraintTop_toBottomOf="@+id/voiceButton"
        android:onClick="onClickTouchButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>